{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "preserveWatchOutput": true,
    "allowJs": false,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,

    "composite": true,
    "incremental": true,
    "declaration": true,

    "module": "commonjs",
    "target": "es2020",
    "lib": ["esnext"],
    "moduleResolution": "node",

    "baseUrl": ".",

    "rootDirs": [
      ".",

      "./packages",
      "./bazel-out/darwin-fastbuild/bin/packages",
      "./bazel-out/k8-fastbuild/bin/packages",
      "./bazel-out/x64_windows-fastbuild/bin/packages",
      "./bazel-out/darwin-dbg/bin/packages",
      "./bazel-out/k8-dbg/bin/packages",
      "./bazel-out/x64_windows-dbg/bin/packages"
    ]
  },
  "exclude": [
    "bazel-stratis3",
    "bazel-out",
    "external",
    "bazel-testlogs",
    "node_modules"
  ]
}
